generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String
  email     String    @unique
  refreshtoken String?
  password  String
  resetotp String?
  resetotpexpired DateTime?
  isemailverified Boolean @default(false)
  verificationtoken String?
  activies Activity[]
  createAt  DateTime  @default(now())
}

model Activity {
  id String    @id @default(uuid())
  userid String
  date DateTime
  transportasidarat Json
  transportasiudara Json
  transportasilaut Json
  dayarumahtangga Json
  peralatanrumahtangga Json
  makanan Json
  sampah Json
  createAt DateTime @default(now())
  user User @relation(fields: [userid], references: [id])
}